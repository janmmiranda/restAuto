<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/frame_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.jan.restauto.menuFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/menuList"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_above="@+id/orderBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:choiceMode="multipleChoice"/>

        <ListView
            android:id="@+id/qt"
            android:layout_width="50dp"
            android:layout_height="400dp"
            android:layout_alignTop="@+id/menuList"
            android:layout_toEndOf="@+id/menuList"
            android:choiceMode="multipleChoice"/>

        <Button
            android:id="@+id/orderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:text="@string/order"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/menuList"
            android:layout_alignEnd="@+id/qt"
            android:layout_marginBottom="8dp"
            android:text="Quantity"/>


    </RelativeLayout>

</FrameLayout>
